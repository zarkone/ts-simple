{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"args": ["install"]
		},
		{
			"taskName": "start",
			"args": ["run", "start"]
		},
		{
			"taskName": "build",
			"args": ["run", "build", "-s"]
		},
		{
			"taskName": "test",
			"args": ["run", "test", "-s"]
		}
	]
}